{
  "name": "@hustlexp/backend",
  "version": "1.0.0",
  "description": "HustleXP Backend - Layer 1 enforcement above constitutional schema",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:invariants": "vitest run tests/invariants",
    "test:kill": "vitest run tests/invariants --reporter=verbose",
    "db:migrate": "psql -d hustlexp < ../schema.sql",
    "db:reset": "psql -d postgres -c 'DROP DATABASE IF EXISTS hustlexp' && psql -d postgres -c 'CREATE DATABASE hustlexp' && npm run db:migrate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@trpc/server": "^10.45.0",
    "pg": "^8.11.3",
    "zod": "^3.22.4",
    "superjson": "^2.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
